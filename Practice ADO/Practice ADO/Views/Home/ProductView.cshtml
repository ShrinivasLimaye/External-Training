<!--Product  partial View-->

@model IEnumerable<BLL.Sales.Product>
@using BLL.Sales

@if (Model != null)
{
    <div class="grid">
        <table cellspacing="0" width="80%">
            <thead>
                <tr><th>Name</th> <th>Balance</th> <th>UnitPrice </th> </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="left">  @item.Name </td>
                        <td align="left">  @item.Balance </td>
                        <td align="left">  @item.UnitPrice </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}