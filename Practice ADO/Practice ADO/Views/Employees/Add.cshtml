
@using BOLayer

@{
    ViewBag.Title = "WebGrid Example";
    var grid = new WebGrid(source: Model, canPage: true, rowsPerPage: 1000);
    grid.Pager(WebGridPagerModes.All);
    }
<head>
<style>
table {
  border-collapse: collapse;
}

table, td, th {
  border: 2px solid black;
}
</style>
</head>

<table style="width:200%">

  
<div id="gridContent" style="font-family: Arial; padding: 20px; ">
    @grid.GetHtml(tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    selectedRowStyle: "webgrid-selected-row",
    rowStyle: "webgrid-row-style",
    columns: grid.Columns(
    grid.Column(columnName: "Id", header: "Id"),
    grid.Column(columnName: "FullName", header: "First Name"),
    grid.Column(columnName: "Gender", header: "Gender"),
    grid.Column(columnName: "Email", header: "Email Address"),
    grid.Column(columnName: "City", header: "City")

    ))


</div>

   
